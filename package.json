{
  "name": "friend-challenge",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "wrangler dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "db:create": "wrangler d1 create friend-challenge-db",
    "db:migrate": "wrangler d1 execute friend-challenge-db --local --file=./worker/schema.sql",
    "db:migrate:prod": "wrangler d1 execute friend-challenge-db --file=./worker/schema.sql",
    "deploy:api": "wrangler deploy",
    "deploy:pages": "wrangler pages deploy dist",
    "deploy": "npm run build && npm run deploy:pages && npm run deploy:api"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "hono": "^4.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "wrangler": "^3.26.0"
  }
}
